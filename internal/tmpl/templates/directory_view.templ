package templates

import (
	"r.tomng.dev/goserve/internal/files"
	"path/filepath"
)

templ DirectoryView(dirPath string, entries []files.DirEntry, nonce string) {
	<!DOCTYPE html>
	<html>
		<head lang="en">
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>Indexing - { dirPath }</title>
			<style nonce={ nonce }>
				td:nth-child(2), td:nth-child(3) {
					text-align: end;
				}

				table td:nth-child(3) {
					font-family: monospace;
				}

				th:not(:nth-child(1)), td:not(:nth-child(1)) {
					padding-left: 0.5em;
				}
			</style>
		</head>
		<body>
			<h1>Indexing - { dirPath }</h1>
			<hr/>
			<main>
				<table>
					<thead>
						<tr>
							<th>Name</th>
							<th>Size</th>
							<th>Permissions</th>
						</tr>
					</thead>
					<tbody>
						if dirPath != "/" {
							<tr>
								<td><a href={ templ.URL(filepath.Dir(dirPath)) }>../</a></td>
								<td></td>
								<td></td>
							</tr>
						}
						for _, entry := range entries {
							<tr>
								<td><a href={ templ.URL(filepath.Join(dirPath, entry.Name())) }>{ entry.Name() }</a></td>
								<td>{ entry.Size() }</td>
								<td>{ entry.Permissions() }</td>
							</tr>
						}
					</tbody>
				</table>
			</main>
			<hr/>
			<footer>
				<i>Powered by <a href="https://r.tomng.dev/goserve">goserve</a></i>
			</footer>
		</body>
	</html>
}
